<addon id="script.watchdog"
       name="Watch Dog"
       version="0.1"
       provider-name="eth0">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.service" library="watchdog.py" start="startup">
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Sets governor to performance while playing video</summary>
    </extension>
</addon>
